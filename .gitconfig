[core]
    excludesfile = ~/.gitignore_global # Sets global excludes file
	editor = vim
    pager = less -r 
[color]
    diff = auto
    status = auto
    branch = auto
    ui = always

[alias] 
    a = add 
    s = status -s 
    co = checkout 
    lg = !git log --graph --pretty=oneline --abbrev-commit
    br = branch
    h = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    l = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short

[color "diff"]
    meta = yellow
    frag = magenta
    old = red bold
    new = green
    plain = white

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[help] 
    autocorrect = 1
